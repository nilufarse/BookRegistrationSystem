@model Book

@{ 
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<div class="container mt-5">
    <form method="post" asp-action="update">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.BookCategory"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="AuthorId" class="control-label"></label>
                    <select class="form-control" asp-for="AuthorId" asp-items="ViewBag.Author"></select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="PublisherId" class="control-label"></label>
                    <select class="form-control" asp-for="PublisherId" asp-items="ViewBag.Publisher"></select>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3 text-end">
                <a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Back to main</a>
                <input type="submit" value="Update" class="btn btn-warning" />
            </div>
        </div>
    </form>

</div>
