
@model List<Book>
@{
    ViewData["Title"] = "Index";
}

<partial name="_ShowResult" />

<div class="page-container mt-5">
    <div class="row">
        <div class="col-6 text-end">
            <a class=" text-dark btn btn-success" asp-area="" asp-controller="Book" asp-action="Create">Create Book</a>
        </div>
    </div>
    <div class="row">
        <table class="table table-hover table-bordered table-striped mt-5">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Category Name </th>
                    <th>Author Name</th>
                    <th>Publisher Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Author.Name</td>
                    <td>@item.Publisher.Name</td>
                    <td>
                        <a class=" text-dark btn btn-warning" asp-area="" asp-controller="Book" asp-action="Update" asp-route-id="@item.Id">Update Book</a>
                    </td>
                    <td>
                        <a class=" text-dark btn btn-danger" asp-area="" asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id">Delete Book</a>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>

</div>