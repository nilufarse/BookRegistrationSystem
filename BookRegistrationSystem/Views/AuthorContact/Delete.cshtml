@model AuthorContact
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="container mt-5">
    <form method="post" asp-action="delete">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-4">
                <div class="form-group">
                    <input  type="hidden" asp-for="Id"/>
                    <label asp-for="ContactNumber" class="control-label"></label>
                    <input readonly asp-for="ContactNumber" class="form-control" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input readonly asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label asp-for="AuthorId" class="control-label"></label>
                    <input readonly asp-for="AuthorId" class="form-control" />
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3 text-end">
                <a class="btn btn-info" asp-area="" asp-controller="AuthorContact" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Back to main</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </form>

</div>